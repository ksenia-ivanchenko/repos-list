{
    "compilerOptions": {
        "target": "es2017",
        "jsx": "react-jsx", // позволяем использовать jsx без необходимости импортировать React вручную
        "moduleResolution": "node", // разрешаем импортировать модули
        "lib": ["dom", "es2018"], // подключаем типы, связанные с браузерным API и поддержку типов ECMAScript 2015
        "module": "esnext", // определяем модульный режим для работы ts с современными функциями и совместимость с ECMAScript Modules
        "resolveJsonModule": true, // разрешаем импортировать джейсоны
        "allowSyntheticDefaultImports": true, // создаем синтетические импорты
        "types": ["node", "jest", "@testing-library/jest-dom"],
        "esModuleInterop": true
    },
    "include": ["src"]
}
